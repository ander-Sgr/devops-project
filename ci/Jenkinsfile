pipeline {
    agent any

    stages {
        stage('Checkout from scm') {
            steps {
                 checkout scm 
            }
        }
        stage('Construir y correr el servicio de prueba') {
            steps {
                script {
                    sh 'docker-compose up -d --build env_test'
                    sh 'docker-compose exec env_test pytest --cov=app --cov-report=html'
                }
            }
        }
    }
}