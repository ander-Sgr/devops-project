pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'python:3.11'
    }
    stages {
        stage('Checkout from scm') {
            steps {
                 checkout scm 
            }
        }
        stage('Construir y correr el servicio de prueba') {
            steps {
                agent {
                    docker { image 'python:3.10-slim' }
                }
                steps {
                    sh 'python --version'
                }
            }
        }
    }
}